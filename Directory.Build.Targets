<!-- From https://www.meziantou.net/declaring-internalsvisibleto-in-the-csproj.htm -->
<Project>
  <Target Name="AddInternalsVisibleTo" BeforeTargets="BeforeCompile">

    <PropertyGroup>
      <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    </PropertyGroup>

    <!-- Add default suffix if there is no InternalsVisibleTo or InternalsVisibleToSuffix defined -->
    <ItemGroup Condition="@(InternalsVisibleToSuffix->Count()) == 0 AND @(InternalsVisibleTo->Count()) == 0">
      <InternalsVisibleToSuffix Include=".Tests" />
    </ItemGroup>

    <!-- Handle InternalsVisibleTo -->
    <ItemGroup Condition="'@(InternalsVisibleTo->Count())' &gt; 0">
      <InternalsVisibleTo Include="%(InternalsVisibleToSuffix.Identity)" />
    </ItemGroup>

    <!-- Handle InternalsVisibleToSuffix -->
    <ItemGroup Condition="@(InternalsVisibleToSuffix->Count()) &gt; 0">
      <InternalsVisibleTo Include="$(AssemblyName)%(InternalsVisibleToSuffix.Identity)" />
    </ItemGroup>
  </Target>
</Project>
