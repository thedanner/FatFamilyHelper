// Rename this file to "appSettings.json" and customize as needed.
{
  "discordSettings": {
    // To create a bot, go to https://discord.com/developers/applications and create an applicaion.
    // 
    // On the OAuth2 page, set the following, and follow the generated authorize link OAuth 2 needs the following scopes:
    // - bot
    // - applications.commands
    // and the following bot permissions:
    // - General:
    //   - Manage Roles
    //   - View Channels
    // - Text: Send Messages
    // - Voice: Move Members
    //
    // On the Bot page, ensure that the following options are enabled:
    // - Privileged Gateway Intents:
    //   - Presence Intent
    //   - Server Members Intent

    "botToken": "", // Insert your Discord bot token here
    "prefixes": [ ".", "!" ],
    "guildSettings": [
      {
        // The guild name should be inserted as a comment.
        "id": -1, // Insert your server ID here. Note that Discord IDs ("Snowflake IDs") are ulongs.
        "channels": {
          // The first team's channel info. Name is just for reference. The ID is the channel ID.
          // Note that these shouldn't be dedicated to Survivors or Infected, since the teams alternate
          // and there's no reason to move people around after the initial move.
          // For players to be moved at all, they must be in one of these two channels.
          "primary": {
            "name": "First team's channel name",
            "id": -1
          },
          // The second team's channel info.
          "secondary": {
            "name": "Second team's channel name",
            "id": -1
          }
        },
        // Optional. For the set-role-colors module, this defines the roles that should be re-colored.
        "roleColors": {
          "top": {
            "name": "Name of top-most role",
            "id": -1
          },
          "bottom": {
            "name": "Name of bottom-most role",
            "id": -1
          }
        },
        // Optional. If a missing mapping is found, ping these people to fix it.
        "configMaintainers": [
          {
            "name": "Discord name (info only)",
            "discordId": -1
          }
        ],
        // Boolean. If true, the bot messages will reply to the message that triggered the command.
        "referenceCommandsInReplies": false
      }
    ]
  },
  "taskSettings": {
    // This will vary based on which tasks are actually implemented.
    "DeleteExpiredBorderlandsCodesTask": {
      "guildId": -1,
      "channelId": -1
    }
  },
  "left4deadSettings": {
    "server": {
      // Fill in both of these.
      "ip": "",
      "rconPassword": ""
    },
    "maps": {
      "normal": [
        "Dead Center",
        "Dark Carnival",
        //"Swamp Fever",
        "Hard Rain",
        "The Parish",
        "No Mercy",
        "Death Toll",
        "Dead Air",
        "Blood Harvest"
      ],
      "normal-long": [
        "Dark Carnival",
        "The Parish"
      ],
      "normal-short": [
        "Dead Center"
      ],
      "short": [
        "The Passing",
        "The Sacrifice",
        "Crash Course",
        "Cold Stream",
        "The Last Stand"
      ]
    }
  },
  "userMappings": [
    // Unfortunately, there is no way of figuring this out automatically.
    // You can look up a player's Steam ID from https://steamid.io/lookup if you have their profile link.
    // Otherwise, the logs will print a player's name and Steam ID, and then you just have to figure out what that user's
    // Discord ID.
    // TODO: allow users to register their own Steam IDs somehow.
    {
      "name": "Player 1",
      "discordId": -1,
      "steamId": "STEAM_0:0:0000000"
    },
    {
      "name": "Player 2",
      "discordId": -2,
      "steamId": "STEAM_0:1:0000001"
    },
    {
      "name": "Player 3",
      "discordId": -3,
      "steamId": "STEAM_1:0:0000002"
    }
  ]
}
